<AnchorPane prefHeight="600.0" prefWidth="860.0" stylesheets="@AdminDeposit.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Admin.AdminDepositController">
    <VBox layoutX="102.0" layoutY="100.0" prefHeight="450.0" prefWidth="840.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="100.0">
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="840.0" styleClass="search_box">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search By Recipient Address: " />
            <TextField fx:id="raddress_fld" styleClass="search_box" />
            <Button fx:id="search_btn" mnemonicParsing="false" text="Search">
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="SEARCH" size="20" />
                </graphic>
            </Button>
        </HBox>
        <ListView fx:id="result_listview" prefHeight="150.0" prefWidth="840.0" />
        <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="229.0" prefWidth="840.0" styleClass="deposit_box">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Deposit" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Amount" />
            <TextField fx:id="amount_fld" />
            <Button fx:id="deposit_btn" mnemonicParsing="false" text="Deposit">
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="MONEY" size="20" />
                </graphic>
            </Button>
        </VBox>
    </VBox>
</AnchorPane>

